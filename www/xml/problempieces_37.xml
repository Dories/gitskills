                <Input input_type="number" input_key="F_26_12_01" length="3"  />
            <Description text="厘米 体重"/>
            <Input input_type="number" input_key="F_26_12_02" length="3"  />
            <Description text="公斤；"/>
        </Expendable>
    </DisclosureItem> -->

