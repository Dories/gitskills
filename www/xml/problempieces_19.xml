<?xml version="1.0" encoding="utf-8"?>
<Disclosure xmlns:android="http://schemas.android.com/apk/res/android" >	
	<!--问题卷19 消化系统疾病问卷-->
 <DisclosureItem disclosure_ver="A_19_" disclosure_id="problempieces_19" flag="questionName" text="消化系统疾病问卷"/>

    <DisclosureItem disclosure_ver="A_19_" no_yesno="true" disclosure_id="A_19_1_" flag="common">
        <Description text="1.  您首次得知患病时间："/>
        <Input input_key="A_19_1_year" length="3" input_type="number"/>
        <Description text="年"/>
        <Input input_key="A_19_1_month" length="3" input_type="number"/>
        <Description text="月"/>
        <Input input_type="br"/>
        <Description text="最近一次发作的时间："/>
        <Input input_key="A_19_1_years" length="3" input_type="number"/>
        <Description text="年"/>
        <Input input_key="A_19_1_months" length="3" input_type="number"/>
        <Description text="月"/>
    </DisclosureItem>
    <DisclosureItem disclosure_ver="A_19_" no_yesno="true" disclosure_id="A_19_2_" flag="common">
        <Description text="2.  发病时的症状："/>
        <Radio input_type="checkbox" and_others="false" options="无症状" radio_key="A_19_2_a"/>
        <Radio input_type="checkbox" and_others="false" options="腹痛" radio_key="A_19_2_b"/>
        <Radio input_type="checkbox" and_others="false" options="腹胀" radio_key="A_19_2_c"/>
        <Radio input_type="checkbox" and_others="false" options="腹部不适" radio_key="A_19_2_d"/>
        <Radio input_type="checkbox" and_others="false" options="反酸" radio_key="A_19_2_e"/>
        <Radio input_type="checkbox" and_others="false" options="嗳气" radio_key="A_19_2_f"/>
        <Radio input_type="checkbox" and_others="false" options="低热" radio_key="A_19_2_g"/>
        <Radio input_type="checkbox" and_others="false" options="乏力" radio_key="A_19_2_h"/>
        <Radio input_type="checkbox" and_others="false" options="盗汗" radio_key="A_19_2_i"/>
        <Radio input_type="checkbox" and_others="false" options="体重下降" radio_key="A_19_2_j"/>
        <Radio input_type="checkbox" and_others="false" options="长期腹泻" radio_key="A_19_2_k"/>
        <Radio input_type="checkbox" and_others="false" options="其他" radio_key="A_19_2_l"/>
        <Input input_key="A_19_2_01" length="10" input_type="text" is_checked="false" />
    </DisclosureItem>
    <DisclosureItem disclosure_ver="A_19_" no_yesno="donotCheckYes" disclosure_id="A_19_3_" flag="common">
        <Description text="3.  上述症状是否反复发作？"/>
        <Expendable>
            <Description text="发作频率"/>
            <Input input_key="A_19_3_01" length="3" input_type="number"/>
            <Description text="次/年"/>
            <Input input_type="br"/>
            <Description text="每次发作持续时间"/>
            <Input input_key="A_19_3_02" length="3" input_type="number"/>
            <Description text="天"/>
        </Expendable>
    </DisclosureItem>
    <DisclosureItem disclosure_ver="A_19_" no_yesno="false" disclosure_id="A_19_4_" flag="common">
        <Description text="4.  疾病是否确诊？"/>
        <Expendable>
            <Description text="确诊诊断"/>
            <Input input_key="A_19_4_01" length="5" input_type="text"/>
            <Description text="诊断医院"/>
            <Input input_key="A_19_4_02" length="5" input_type="text"/>
            <Description text="诊断时间"/>
            <Input input_key="A_19_4_03" length="5" input_type="text"/>
        </Expendable>
    </DisclosureItem>
    <DisclosureItem disclosure_ver="A_19_" no_yesno="false" disclosure_id="A_19_5_" flag="common">
        <Description text="5.  症状发作是否有明显的诱因？（如饮酒、进食、饥饿、情绪紧张等）"/>
    </DisclosureItem>
    <DisclosureItem disclosure_ver="A_19_" no_yesno="false" disclosure_id="A_19_6_" flag="common">
        <Description text="6.  是否有呕血或者黑便史？"/>
    </DisclosureItem>
    <DisclosureItem disclosure_ver="A_19_" no_yesno="false" disclosure_id="A_19_7_" flag="common">
        <Description text="7.  是否曾因消化系统疾病住院诊治？"/>
        <Expendable>
            <Description text="医院名称"/>
            <Input input_key="A_19_7_01" length="5" input_type="text"/>
            <Description text="住院次数"/>
            <Input input_key="A_19_7_02" length="5" input_type="text"/>
            <Description text="次"/>
        </Expendable>
    </DisclosureItem>
    <DisclosureItem disclosure_ver="A_19_" no_yesno="false" disclosure_id="A_19_8_" flag="common">
        <Description text="8.  是否接受治疗？"/>
        <Expendable>
            <Radio input_type="checkbox" and_others="false" options="服药治疗" radio_key="A_19_8_05"/>
            <Input input_type="br"/>
            <Description text="药物名称"/>
            <Input input_key="A_19_8_01" length="5" input_type="text"/>
            <Radio input_type="checkbox" and_others="false" options="手术治疗" radio_key="A_19_8_06"/>
            <Input input_type="br"/>
            <Description text="手术名称"/>
            <Input input_key="A_19_8_02" length="5" input_type="text"/>
            <Description text="手术日期"/>
            <Input input_key="A_19_8_03" length="5" input_type="text"/>
            <Radio input_type="checkbox" and_others="false" options="其他治疗" radio_key="A_19_8_07"/>
            <Input input_type="br"/>
            <Input input_key="A_19_8_04" length="5" input_type="text"/>
        </Expendable>
    </DisclosureItem>
    <DisclosureItem disclosure_ver="A_19_" no_yesno="false" disclosure_id="A_19_9_" flag="common">
        <Description text="9.  是否做过胃镜、纤维结肠镜、钡餐、钡灌肠、腹部B超等检查？"/>
    </DisclosureItem>

    <DisclosureItem disclosure_ver="A_19_" no_yesno="true" disclosure_id="A_19_check_result" flag="BlankRemarkTable" isCheck_yes="false">
        <Description text="以上问题如果选“是”，请详细说明并提供相关的病历资料（门诊病历、住院记录及化验检查结果）"/>
        <Expendable>
            <BlankRemarkTable input_key="A_19_check_result" lines="3"/>
        </Expendable>
    </DisclosureItem>

    <DisclosureItem disclosure_ver="A_19_" no_yesno="false" disclosure_id="A_19_11_" flag="BlankRemarkTable">
        <Description text="11. 是否有以上未提及的其他疾病或不适？"/>
        <Expendable>
             <BlankRemarkTable input_key="A_19_11_01" lines="3" placeholder="如是，请说明："/>
        </Expendable>
    </DisclosureItem>
    
</Disclosure>