<?xml version="1.0" encoding="utf-8"?>
<Disclosure xmlns:android="http://schemas.android.com/apk/res/android" >	
	<!--问题卷17 听力问卷-->
 <DisclosureItem disclosure_ver="A_17_" disclosure_id="problempieces_17" flag="questionName" text="听力问卷"/>

    <DisclosureItem disclosure_ver="A_17_" no_yesno="true" disclosure_id="A_17_1_" flag="common">
        <Description text="1.  您是哪侧听力受损？"/>
        <Radio input_type="checkbox" and_others="false" options="左侧" radio_key="A_17_1_a"/>
        <Radio input_type="checkbox" and_others="false" options="右侧" radio_key="A_17_1_b"/>
        <Radio input_type="checkbox" and_others="false" options="双侧" radio_key="A_17_1_c"/>
    </DisclosureItem>
    <DisclosureItem disclosure_ver="A_17_" no_yesno="true" disclosure_id="A_17_2_" flag="common">
        <Description text="2.  请说明目前的听力情况："/>
        <Radio input_type="checkbox" and_others="false" options="完全听力丧失" radio_key="A_17_2_a"/>
        <Radio input_type="checkbox" and_others="false" options="戴助听器" radio_key="A_17_2_b"/>
        <Radio input_type="checkbox" and_others="false" options="其他" radio_key="A_17_2_c"/>
        <Input input_key="A_17_2_01" length="5" input_type="text" is_checked="false"/>
    </DisclosureItem>
    <DisclosureItem disclosure_ver="A_17_" no_yesno="true" disclosure_id="A_17_3_" flag="common">
        <Description text="3.  造成听力受损的原因："/>
        <Radio input_type="radio" and_others="false" options="先天性" radio_key="A_17_3_a"/>
        <Radio input_type="radio" and_others="false" options="后天性" radio_key="A_17_3_b"/>
        <Input input_type="br"/>
        <Description text="起始时间："/>
        <Input input_key="A_17_3_06" length="3" input_type="number" is_checked="false"/>
        <Description text="年"/>
        <Input input_key="A_17_3_07" length="3" input_type="number" is_checked="false"/>
        <Description text="月"/>
        <Radio input_type="checkbox" and_others="false" options="外伤" radio_key="A_17_3_01"/>
        <Radio input_type="checkbox" and_others="false" options="疾病" radio_key="A_17_3_02"/>
        <Radio input_type="checkbox" and_others="false" options="疾病" radio_key="A_17_3_03"/>
        <Radio input_type="checkbox" and_others="false" options="其他 如环境噪音等" radio_key="A_17_3_04"/>
        <Input input_type="br"/>
        <Description text="诊断结果"/>
        <Input input_key="A_17_3_05" length="5" input_type="text" is_checked="false"/>
    </DisclosureItem>
    <DisclosureItem disclosure_ver="A_17_" no_yesno="true" disclosure_id="A_17_4_" flag="BlankRemarkTable">
        <Description text="4.  曾行何种检查？结果如何？"/>
        <Expendable>
            <BlankRemarkTable input_key="A_17_4_01" lines="3"/>
        </Expendable>
    </DisclosureItem>
    <DisclosureItem disclosure_ver="A_17_" no_yesno="false" disclosure_id="A_17_5_" flag="common">
        <Description text="5. 是否接受治疗？"/>
        <Expendable>
            <Description text="治疗方法"/>
            <Input input_key="A_17_5_01" length="5" input_type="text"/>
            <Description text="效果"/>
            <Input input_key="A_17_5_02" length="5" input_type="text"/>
        </Expendable>
    </DisclosureItem>
    <DisclosureItem disclosure_ver="A_17_" no_yesno="false" disclosure_id="A_17_6_" flag="common">
        <Description text="6. 目前是否仍在治疗？ "/>          
    </DisclosureItem>
    <DisclosureItem disclosure_ver="A_17_" no_yesno="false" disclosure_id="A_17_7_" flag="common">
        <Description text="7.  是否去医院随访及复查？"/>
        <Expendable>
            <Description text="最近一次随访及复查的时间"/>
            <Input input_key="A_17_7_01" length="5" input_type="text"/>
            <Input input_type="br"/>
            <Description text="结果"/>
            <Input input_key="A_17_7_02" length="5" input_type="text"/>
            <Description text="检查与治疗"/>
            <Input input_key="A_17_7_03" length="5" input_type="text"/>
        </Expendable>
    </DisclosureItem>
    <DisclosureItem disclosure_ver="A_17_" no_yesno="false" disclosure_id="A_17_8_" flag="common">
        <Description text="8.  是否曾因意外伤害向保险公司申请理赔？"/>          
    </DisclosureItem>
    <DisclosureItem disclosure_ver="A_17_" no_yesno="donotCheckYes" disclosure_id="A_17_9_" flag="common">
        <Description text="9.  是否能进行语言表达？"/>          
    </DisclosureItem>

    <DisclosureItem disclosure_ver="A_17_" no_yesno="true" disclosure_id="A_17_check_result" flag="BlankRemarkTable" isCheck_yes="false">
        <Description text="以上问题如果选“是”，请详细说明并提供相关的病历资料（门诊病历、住院记录及化验检查结果）"/>
        <Expendable>
            <BlankRemarkTable input_key="A_17_check_result" lines="3"/>
        </Expendable>
    </DisclosureItem>

    <DisclosureItem disclosure_ver="A_17_" no_yesno="false" disclosure_id="A_17_10_" flag="BlankRemarkTable">
        <Description text="10. 是否有以上未提及的其他疾病或不适？"/>
        <Expendable>
             <BlankRemarkTable input_key="A_17_10_01" lines="3" placeholder="如是，请说明："/>
        </Expendable>
    </DisclosureItem>
    
</Disclosure>